
<div class="main-grid">
  <% for i in 0..2 do %>
  <div class = "wrapper">
    <h2><%= @titles[i] %></h2>
    <div class = "products">
        <img src="<%= @image[i]%>">
        <a href="<%= @description[i] %>">Click for more details.</a>
        <p>Date <%= @date[i] %></p>
    </div>
  </div>
  <% end %>

</div>

<div class="wrapper">
  <h2>Search by area</h2>
  <form class="events-search" action="/events" method="get">
    <input type="text" class="entry" name="address" placeholder="Which Area?">
    <input type="submit" class="submission">
  </form>
</div>
