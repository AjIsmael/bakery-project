<div class="main-grid">
  <% for i in 0..2 do %>
  <div class = "wrapper">
    <h2><%= @muffins[i].name %></h2>
    <div class = "products">
        <img src="<%= @muffins[i].image %>">
        <p><%= @muffins[i].description %></p>
        <p><%= @muffins[i].calories %></p>
        <p><%= @muffins[i].price %></p>
    </div>
  </div>
  <% end %>

</div>
